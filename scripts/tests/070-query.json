			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN"
			}
		},
		{
			"name": "Field Selection",
			"cmd": "GET",
			"details": "**Query Option:** `?fields={field1,field2}`",
			"notes": "Returns only the specified fields (plus `id` which is always included).",
			"endpoint": "/products:list?fields=quantity,title",
			"headers": {
