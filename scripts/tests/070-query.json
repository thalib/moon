		{
			"name": "Filtering",
			"cmd": "GET",
			"details": "**Query Option:** `?column[operator]=value`",
			"notes": "**Operators:** eq, ne, gt, lt, gte, lte, like, in",
			"endpoint": "/products:list?quantity[gt]=5&brand[eq]=Wow",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN"
			}
		},
		{
			"name": "Sorting",
			"cmd": "GET",
			"details": "**Query Option:** `?sort={-field1,field2}`",
