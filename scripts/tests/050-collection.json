{
	"docURL": "http://localhost:6006",
	"serverURL":  "https://moon.asensar.in",
	"prefix": "",
	"username": "admin",
	"password": "moonadmin12#",
	"health": "/health",
	"tests": [
		{
			"name": "Collections Create",
			"cmd": "POST",
			"endpoint": "/collections:create",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"columns": [
					{"name": "title", "type": "string", "nullable": false},
					{"name": "price", "type": "integer", "nullable": false},
					{"name": "description", "type": "string", "nullable": true}
				]
			}
		},
		{
			"name": "Collections List",
			"cmd": "GET",
			"endpoint": "/collections:list",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN"
			}
		},
		{
			"name": "Collections Get",
			"cmd": "GET",
			"endpoint": "/collections:get?name=products",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN"
			}
		},
		{
			"name": "Collections Update - Add Columns",
			"cmd": "POST",
			"endpoint": "/collections:update",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"add_columns": [
					{"name": "stock", "type": "integer", "nullable": false},
					{"name": "category", "type": "string", "nullable": false}
				]
			}
		},
		{
			"name": "Collections Update - Rename Columns",
			"cmd": "POST",
			"endpoint": "/collections:update",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"rename_columns": [
					{"old_name": "description", "new_name": "details"}
				]
			}
		},
		{
			"name": "Collections Update - Modify Columns",
			"cmd": "POST",
			"endpoint": "/collections:update",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"modify_columns": [
					{"name": "category", "type": "integer", "nullable": true}
				]
			}
		},
		{
			"name": "Collections Update - Remove Columns",
			"cmd": "POST",
			"endpoint": "/collections:update",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"remove_columns": ["category"]
			}
		},
		{
			"name": "Collections Update - Combine Operations",
			"cmd": "POST",
			"endpoint": "/collections:update",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products",
				"add_columns": [
					{"name": "brand", "type": "string", "nullable": false}
				],
				"rename_columns": [
					{"old_name": "stock", "new_name": "quantity"}
				],
				"modify_columns": [
					{"name": "price", "type": "integer", "nullable": false}
				]
			}
		},
		{
			"name": "Collections Destroy",
			"cmd": "POST",
			"endpoint": "/collections:destroy",
			"headers": {
				"Authorization": "Bearer $ACCESS_TOKEN",
				"Content-Type": "application/json"
			},
			"data": {
				"name": "products"
			}
		}
	]
}
